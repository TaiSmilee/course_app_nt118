<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8FA"
    android:orientation="vertical">

    <!-- Header bar with gradient -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_blue_header"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="24dp"
        android:paddingTop="32dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Hello TÃ i"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ripple_white_rounded"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:backgroundTint="@android:color/transparent"
                app:icon="@drawable/notifications_24px"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="24dp"
                app:iconTint="@android:color/white"
                app:rippleColor="#40FFFFFF" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Month layout with modern styling -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/monthCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="-32dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="April"
                    android:textColor="#1A237E"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="2025"
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Days of week -->
            <LinearLayout
                android:id="@+id/daysOfWeekLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="Sun"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="Mon"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="Tue"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="Wed"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="Thu"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="Fri"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="Sat"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Days numbers -->
            <LinearLayout
                android:id="@+id/daysNumbersLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="7">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/day06"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:insetLeft="4dp"
                    android:insetTop="4dp"
                    android:insetRight="4dp"
                    android:insetBottom="4dp"
                    android:text="13"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="8dp"
                    app:rippleColor="#400099FF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/day07"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:insetLeft="4dp"
                    android:insetTop="4dp"
                    android:insetRight="4dp"
                    android:insetBottom="4dp"
                    android:text="14"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="#0099FF"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/day08"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:insetLeft="4dp"
                    android:insetTop="4dp"
                    android:insetRight="4dp"
                    android:insetBottom="4dp"
                    android:text="15"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="8dp"
                    app:rippleColor="#400099FF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/day09"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:insetLeft="4dp"
                    android:insetTop="4dp"
                    android:insetRight="4dp"
                    android:insetBottom="4dp"
                    android:text="16"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="8dp"
                    app:rippleColor="#400099FF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/day10"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:insetLeft="4dp"
                    android:insetTop="4dp"
                    android:insetRight="4dp"
                    android:insetBottom="4dp"
                    android:text="17"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="8dp"
                    app:rippleColor="#400099FF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/day11"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:insetLeft="4dp"
                    android:insetTop="4dp"
                    android:insetRight="4dp"
                    android:insetBottom="4dp"
                    android:text="18"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="8dp"
                    app:rippleColor="#400099FF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/day12"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:insetLeft="4dp"
                    android:insetTop="4dp"
                    android:insetRight="4dp"
                    android:insetBottom="4dp"
                    android:text="19"
                    android:textColor="#0099FF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="8dp"
                    app:strokeColor="#0099FF"
                    app:strokeWidth="2dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Course list title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:text="Your Schedule"
        android:textColor="#1A237E"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvClassList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="16dp" />

    <!-- Bottom bar -->
    <include layout="@layout/bottom_bar"/>
</LinearLayout>